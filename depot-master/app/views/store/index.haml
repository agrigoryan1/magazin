%h1= t('app.txt.products_catalog')

- @products.each do |product|
  %div.entry
    = image_tag(product.image_url)
    %h3= link_to product.title, product
    %div.content= sanitize(product.description)
    %div.price_line
      %span.price
        = number_to_currency(product.price)
      = button_to t('.add_html'),
                  line_items_path(product_id: product.id),
                  remote: true
